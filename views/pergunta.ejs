<%- include('partials/head.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="post" action="/responder">
            <h3>Responda</h3>
            <label>Resposta:</label>
            <textarea name="corpo" id="" cols="30" rows="10" placeholder="Digite sua resposta" class="form-control" required></textarea><br>
            <input type="text" name="pergunta" value="<%= pergunta.id%>" hidden>
            <button class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <%}); %>
    </div>
</body>
<%- include('partials/footer.ejs') %>